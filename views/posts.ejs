<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posts</title>
  <style>
    body {
      padding: 0 20% 20%;
      text-align: center;
    }
    ol {
      list-style-position: inside;
      padding-left: 0;
    }
    .title {
      font-size: 16px;
      color: #3cb371;
    }
    .body {
      font-size: 12px;
      color: #4A4A4A;
    }
  </style>
</head>
<body>

  <h1>Posts</h1>

  <ol>
    <% posts.forEach(post => { %>
      <li>
        <p class="title"> <%= post["title"] %> </p>
        <p class="body"> <%= post["body"] %> </p>
      </li>
    <% }) %> 
  </ol>

</body>
</html>